echo "from flask import Flask
app = Flask(__name__)
@app.route('/')
def main():
	return '<h1>Hello, World!<h1>'" > ~/app.py
docker-machine scp ~/app.py Char:/home
rm ~/app.py
docker run --name Abathur --mount type=bind,src=/home,dst=/root -p $(docker-machine ip Char):3000:3000 -di python:2-slim
docker exec Abathur pip install Flask
docker exec -d -e FLASK_APP=/root/app.py Abathur flask run --host=0.0.0.0 --port 3000